<%= form_with url: login_url, local: true, html: { class: "user-form" } do |f| %>
  <div class="fields">
    <%= f.text_field :username, placeholder: "Username" %>
  </div>

  <div class="fields">
    <%= f.password_field :password, placeholder: "Password" %>
  </div>

  <div class="action">
    <%= f.submit "Log In", disable_with: 'Logging you in...' %>
  </div>
<% end %>