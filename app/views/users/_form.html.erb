<%= form_with model: user, local: true, html: { class: "user-form" } do |f| %>
  <div class="field">
    <%= f.text_field :username, placeholder: "Username" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "Comfirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign Up", disable_with: 'Signing you up...' %>
  </div>
<% end %>